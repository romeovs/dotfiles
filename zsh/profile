# cd into vub {{{
# requires ffind
export VUB_PATH="$HOME/Documents/vub/"
function vub() {
    cd $VUB_PATH
    if [ $# -gt 0 ]; then
        if [ $# -eq 2 ]; then
            DIR=$(ffind -S "$2" -t d | grep -i "$1" | head -n 1)
        else
            DIR=$(ffind -S "$1" -t d | head -n 1)
        fi
        echo "vub/"${DIR#./}
        if [ -d "$DIR" ]; then
            cd "$DIR"
        else
            echo $fg[red]"\033[4mError\033[0m: vub directory '\033[35m$1\033[0m' does not exist."
        fi
    fi
}
# }}}

# node
alias babel-node="babel-node --harmony --stage 0 --blacklist 'spec.functionName'"

# open a file / folder
# defaults to opening current dir
function o {
  folder=${1:-.}
  open $folder
}



