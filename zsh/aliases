
# ls
alias ls="ls -1HhFp --color --group-directories-first --time-style='+%Y-%m-%d %H:%M:%S' --hide='Icon?' --hide='.DS_Store' --ignore='lost+found'"
alias l="ls -l"
alias lsb="ls -Ssr"
alias la="ls -lA"
alias ks="ls"

# quit easily
alias q=" exit"
alias :q=" q"
alias qa=" tmux kill-session"
alias quit=" q"

# system utilities
alias cp="cp -v"
alias mv="mv -v"
alias df="df -H"
alias mkdir="mkdir -p -v"
alias e="vim"
alias grep="grep --color=auto"

# racket
alias csi="csi -q -include-path '/Users/romeovs/Documents/vub/algoritmen en datastructuren/wpo/code'"
alias rkt="rlwrap /Applications/Racket\ v6.1.1/bin/racket -S /Users/romeovs/Documents/vub/Programmeerproject\ II/src"
alias scm="rlwrap /Applications/Racket\ v6.1.1/bin/plt-r5rs"

# tex
alias latexpre='latex -ini -job-name="preamble" "&latex preamble.pre\dump"'

# compilers
alias gcc='gcc -std=c++11'

# haskell highlighting
hhl(){
    $@ | hhl.sh
}
alias ghc="hhl ghc"
alias hoogle="hhl hoogle"
alias pf="hhl pointfree"
alias upf="hhl pointful"

# auto sudoedit when file is not editable in vim
alias e="$EDITOR"

# node
alias babel-node="babel-node --harmony --stage 0 --blacklist 'spec.functionName'"

# open a file / folder
# defaults to opening current dir
function o {
  folder=${1:-.}
  open $folder
}

# cd into vub
# requires ffind
export VUB_PATH="$HOME/Documents/vub/"
function vub() {
  cd $VUB_PATH
  if [ $# -gt 0 ]; then
    if [ $# -eq 2 ]; then
      DIR=$(ffind -S "$2" -t d | grep -i "$1" | head -n 1)
    else
      DIR=$(ffind -S "$1" -t d | head -n 1)
    fi
    echo "vub/"${DIR#./}
    if [ -d "$DIR" ]; then
      cd "$DIR"
    else
      echo $fg[red]"\033[4mError\033[0m: vub directory '\033[35m$1\033[0m' does not exist."
    fi
  fi
}

