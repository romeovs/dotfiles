#!/usr/bin/env sh

# get dir of homerun
homerun=$(dirname $(dirname $0))

# get command
task=$1
shift

function help() {
  printf "Usage: homerun TASK [arguments]

Tasks:
  homerun install      # run install scripts
  homerun cd TOOL      # go into dir of TOOL
  homerun list         # list tools
"
}

function error() {
  echo '\033[0;31m'Error: $1'\033[0m'
  exit 1
}


case "$task" in
'install')
  sh "${homerun}/lib/install";
  ;;

'help')
  help
  ;;

*)
  error "unkown task \`${task}\`"
  ;;
esac

