function z () {
  . `brew --prefix`/etc/profile.d/z.sh

  function z_precmd () {
    z --add "$(pwd -P)"
  }

  _z "$@"
}

function z_precmd () {}

alias j='z'
alias zr='z -r'
alias zt='z -t'
alias .z='z -c'
alias z.='z -c'

function zl () {
  z $@
  ls -1HhFplN --color --group-directories-first --time-style='+%Y-%m-%d %H:%M:%S' --hide='Icon?' --hide='.DS_Store' --ignore='lost+found'
}

# vim: ft=zsh
