[user]
  name = Romeo Van Snick
  email = romeovs@gmail.com

[core]
  abbrev = 9
  excludesfile = /Users/romeo/.config/git/excludes
	pager = /usr/local//share/git-core/contrib/diff-highlight/diff-highlight | less

[advice]
  detachedHead = true
  statusHints  = false
  implicitIdentity = true

[format]
  pretty =%C(yellow)%H%C(black bold)%d%n%C(black bold)author:  %Creset%an <%ce>%n%C(black bold)date:    %Creset%cd%n%C(black bold)subject: %Creset%s%n

[gc]
  reflogexpireunreachable = never
  reflogexpire = never

[status]
  submoduleSummary = 1

[alias]
  s = status
  c = "!f() { git commit -m \"$*\"; }; f"
  ch = checkout
  graph = log --graph --pretty=format:'%C(yellow)%h %C(black bold)%d %Creset%s' --all
  unstage = reset HEAD --
  track = "!git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`"
  amend = commit --amend --no-edit
  fixup = "!f() { git commit --fixup=\"$1\"; git rebase -i --autosquash --autostash \"$1\"~1; }; f"
  new-branch = checkout -b
  cleanup = "!f() { git branch --merged | grep -v '^\\*' | grep -v 'master' | xargs git branch -d; }; f"

[diff]
  compactionHeuristic = true
  indentHeuristic = true

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = always

[color "branch"]
  current = magenta
  local = magenta bold
  remote = cyan
  plain = normal

[color "diff"]
  plain = normal
  meta = bold
  frag = blue
  old = red
  new = green
  commit = yellow
  whitespace = normal red

[color "diff-highlight"]
	oldNormal = red
  oldHighlight = red bold
  newNormal = green
  newHighlight = green bold

[color "decorate"]
  branch = black bold
  remoteBranch = black bold
  tag   = black bold
  stash = black bold
  HEAD  = black bold

[color "status"]
  header  = black bold
  added   = green
  changed = yellow
  branch  = magenta
  untracked = red
  nobranch  = red

[credential]
  helper = osxkeychain

[rerere]
  enabled = true

[commit]
  gpgsign = true

[fetch]
  prune = true

[push]
  followTags = true
